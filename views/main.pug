doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.css")
        link(rel="stylesheet", href="/css/mainStyles.css")
        title SpoiledGPT
    body
        header
            #ai-icon
                img(src="/img/mainIcon.jpg", alt="")
                p SpoiledGPT
        main
            h1 Welcome!
            #new-chat
                input(type="text", id="main-user-input", autocomplete="off", name="message", placeholder="Start new chat...")
                button(id="main-start-button")
                    i.fas.fa-arrow-up
            #existing-chats
                #chats-title
                    h2 All conversations
                    if chats.length >= 2
                        button(id="delete-all") X
                each group, groupName in chats
                    h2= groupName
                    each chat in group
                        a(href=`/${chat.id}`)
                            button #{chat.title}
        script(src="/js/main.js")
